@model MinhasFinancas.Models.Pessoa

@{
    ViewData["Title"] = "Create";
}

<h1 class="titulo-secundario titulo-fonte">Nova Pessoa</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="nome" class="control-label">Nome Completo</label>
                <input asp-for="nome" class="form-control" />
                <span asp-validation-for="nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="documento" class="control-label">CPF/CNPJ</label>
                <input asp-for="documento" class="form-control" />
                <span asp-validation-for="documento" class="text-danger"></span>
            </div>

             <div class="form-group">
                <label asp-for="TipoPessoaID" class="control-label">Tipo de Pessoa</label>
                
                <select id="selectTipoPessoa" asp-for="TipoPessoaID" class="form-control" resource="@ViewBag.LstTipoPessoa">

                    @foreach (TipoPessoa item in ViewBag.LstTipoPessoa)
                     {
                        <option value="@item.ID" resource="@item"> @item.Descricao </option>
                     }
                </select>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="flagCadastroAtivo" /> Cadastro Ativo
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Novo" class="btn btn-primary btn-criar" />
                <a asp-action="Index" type="button" class="btn btn-light btn-voltar">Voltar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
